<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane fx:id="layout" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="editor.JE_Controller">
    <top>
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="New"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Open"/>
                        <MenuItem text="Save"/>
                        <MenuItem text="Save As"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Exit"/>
                    </items>
                </Menu>
                <Menu text="Edit"></Menu>
                <Menu text="GameObject">
                    <items>
                        <Menu text="Add...">
                            <MenuItem text="Empty GameObject"/>
                            <Menu text="Basic Shape"></Menu>
                        </Menu>
                    </items>
                </Menu>
                <Menu text="Tools"></Menu>
                <Menu text="Window"></Menu>
                <Menu text="Help"></Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <AnchorPane fx:id="anchor">
            <Canvas AnchorPane.leftAnchor="0.0" fx:id="levelEditorCanvas" width="1000" height="800"/>
        </AnchorPane>
    </center>
    <right>
        <VBox prefWidth="300" styleClass="properties">
            <HBox>
                <TextField fx:id="x" text="0" prefWidth="60"/>
                <TextField fx:id="y" text="0" prefWidth="60"/>
                <TextField fx:id="w" text="0" prefWidth="60"/>
                <TextField fx:id="h" text="0" prefWidth="60"/>
                <Button onAction="#addObject" fx:id="add" text="add" prefWidth="60" />
            </HBox>
        </VBox>
    </right>
    <stylesheets>
        <URL value="@juggernaut-style.css"/>
    </stylesheets>
</BorderPane>